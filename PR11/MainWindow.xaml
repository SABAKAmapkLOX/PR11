<Window x:Class="PR11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR11"
        mc:Ignorable="d"
        Title="Практическая работа №11" Height="300" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <GroupBox Margin="5" Header="Table">
            <StackPanel>
                <ListBox x:Name="lbText" Margin="5" Height="140"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Найти" Grid.Row="1" Margin="5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBox x:Name="tbText" Width="150" Margin="5"/>
                <Button Content="Найти" Margin="5" Click="Button_Click"/>
                <Button Content="Выход" Margin="5" Click="Button_Click"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
